<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:elevation="14dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/login_border"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ic"
                    android:textColor="#fff"
                    android:textSize="@dimen/dimTextSize_18"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimValue_10"
                    android:gravity="center|left"
                    android:textColor="#fff"
                    android:textSize="@dimen/dimTextSize_16" />


                <com.janelaaj.component.CircleImageView
                    android:id="@+id/logoImage"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>


        <FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:orientation="vertical"
    android:id="@+id/splashContainer"
    android:background="#FFF">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splashImage"
        android:scaleType="centerCrop"
        android:src="@drawable/doctorpic"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.92"
        android:background="@android:color/transparent"
        android:src="@drawable/splash_screen_rectangle"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:elevation="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="5dp"
                android:textSize="19sp"
                android:id="@+id/i_am"
                android:textColor="@color/text_color_hint"
                android:layout_marginRight="30dp"
                android:drawableRight="@drawable/ic_down_arrow"
                android:background="@drawable/round_card_background"
                android:text="Choose Your Location"/>



        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:elevation="5dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="visible"
                    android:id="@+id/location1"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/Text_for_screens"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="1dp"
                    android:background="@color/text_color_hint" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Text_for_screens"
                    android:gravity="center"
                    android:visibility="visible"
                    android:id="@+id/location2"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/text_color_hint" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Text_for_screens"
                    android:id="@+id/location3"
                    android:visibility="visible"
                    android:background="@color/white"                            android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/text_color_hint" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/Text_for_screens"
                    android:id="@+id/location4"
                    android:visibility="visible"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>





            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/activity_dashboard_drawer"
        android:id="@+id/navigation_view"
        app:headerLayout="@layout/nav_header_dashboard"
        android:layout_gravity="start|bottom">

        <include
            android:id="@+id/navHader"
            layout="@layout/nav_header_dashboard" />

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>