<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginRight="@dimen/_14dp"
    android:layout_marginLeft="@dimen/_14dp"
    android:elevation="@dimen/_20dp"
    android:paddingBottom="@dimen/_10dp"
    android:focusable="false"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_100dp"
        android:orientation="vertical"
        android:focusable="false"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardElevation="@dimen/_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:focusable="false"
            android:layout_height="match_parent">
            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/_225dp"
                android:layout_gravity="center"
                android:background="@color/hint_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_100dp"
                    android:focusable="false"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/timming"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_2dp"
                        android:layout_weight="0.5"
                        android:focusable="false"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_circular_clock" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5dp"
                            android:text="Timings"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_112dp"
                        android:layout_gravity="center"
                        android:background="@color/hint_grey" />

                    <LinearLayout
                        android:id="@+id/services"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_customer" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5dp"
                            android:text="@string/servicesrate"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/hint_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2dp"
                    android:minHeight="@dimen/_100dp"
                    android:focusable="false"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/managediscount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:layout_marginRight="@dimen/_2dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_money_bag_lightcolo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5dp"
                            android:text="Manage Discounts"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_112dp"
                        android:layout_gravity="center"
                        android:background="@color/hint_grey" />

                    <LinearLayout
                        android:id="@+id/editlocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_edit" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5dp"
                            android:text="Edit Location"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:elevation="@dimen/_38dp"
                    android:background="@color/hint_grey" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/_225dp"
                android:layout_gravity="center"
                android:background="@color/hint_grey" />


        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>