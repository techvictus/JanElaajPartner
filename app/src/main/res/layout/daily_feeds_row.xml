<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dailyFeedsCardView"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5dp"
    android:layout_height="wrap_content"
    android:background="#fff"
    card_view:cardCornerRadius="4dp"
    android:layout_centerInParent="true"
    card_view:cardElevation="@dimen/_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcolor"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/feedsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/Phone_btn"
            android:gravity="center_vertical"
            android:minHeight="@dimen/_55dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/eventTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:text="#Events"
                android:textColor="@color/white"
                android:textSize="@dimen/_14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:text="Health Camp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14dp"
                 />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:text="Greater Kailash, New Delhi"
                android:textColor="@color/white"
                android:textSize="@dimen/_14dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:text="13th May 2018 AM Onwords"
                android:textColor="@color/white"
                android:textSize="@dimen/_14dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/eventButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_5dp"
                android:elevation="@dimen/_10dp"
                android:background="@drawable/edittextborder"
                android:minWidth="@dimen/_80dp"
                android:padding="@dimen/_5dp"
                android:text="Pool"
                android:textAllCaps="false"
                android:textSize="@dimen/_14dp"
                android:textStyle="normal" />


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>