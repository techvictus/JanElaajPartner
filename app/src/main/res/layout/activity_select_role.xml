<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:orientation="vertical"
    android:id="@+id/splashContainer"
    android:background="#FFF">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splashImage"
        android:scaleType="centerCrop"
        android:src="@drawable/doctorpic"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.92"
        android:background="@android:color/transparent"
        android:src="@drawable/splash_screen_rectangle"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">



        <com.janelaaj.component.CircleImageView
            android:id="@+id/logoImage"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/headertitel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:text="@string/titlename"
            android:textColor="@color/Text_for_screens"
            android:textAlignment="center"
            android:textSize="@dimen/_30dp" />

        <TextView
            android:id="@+id/headersubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/partner"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#5C5C5C"
            android:textSize="@dimen/_12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:elevation="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="5dp"
                android:textSize="19sp"
                android:id="@+id/i_am"
                android:textColor="@color/text_color_hint"
                android:layout_marginRight="30dp"
                android:drawableRight="@drawable/ic_down_arrow"
                android:background="@drawable/round_card_background"
                android:text="Login As..."/>



        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:elevation="5dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/role1"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/Text_for_screens"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="1dp"
                    android:background="@color/text_color_hint" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Text_for_screens"
                    android:gravity="center"
                    android:id="@+id/role2"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>



                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/text_color_hint" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Text_for_screens"
                    android:id="@+id/were_a_pathlab"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:visibility="visible"
                    android:paddingBottom="15dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/text_color_hint" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/Text_for_screens"
                    android:id="@+id/were_different"
                    android:background="@color/white"
                    android:visibility="visible"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>





            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>