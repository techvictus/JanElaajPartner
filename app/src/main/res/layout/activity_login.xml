<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:orientation="vertical"
    android:id="@+id/splashContainer"
    android:background="#FFF">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splashImage"
        android:scaleType="centerCrop"
        android:src="@drawable/doctorpic"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.92"
        android:background="@android:color/transparent"
        android:src="@drawable/splash_screen_rectangle"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:foregroundGravity="center"
            android:orientation="vertical">

            <com.janelaaj.component.CircleImageView
                android:id="@+id/logoImage"
                android:layout_width="@dimen/_80dp"
                android:layout_height="@dimen/_80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/headertitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@string/titlename"
                android:textColor="@color/Text_for_screens"
                android:textAlignment="center"
                android:textSize="@dimen/_30dp" />

            <TextView
                android:id="@+id/headersubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/partner"
                android:textAlignment="center"
                android:textColor="#5C5C5C"
                android:textStyle="bold"
                android:textSize="@dimen/_12dp" />


            <LinearLayout
                android:id="@+id/loginLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2dp"
                android:layout_marginLeft="20dp"
                android:alpha="1"
                android:background="@android:color/transparent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/_26dp"
                android:orientation="vertical">

                <!--<EditText-->
                    <!--android:id="@+id/emailIdView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/_45dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:background="@drawable/edittextborder"-->
                    <!--android:ems="10"-->
                    <!--android:hint="email id"-->
                    <!--android:textColorHint="@color/text_color_hint"-->
                    <!--android:inputType="textEmailAddress"-->
                    <!--android:maxLines="1"-->
                    <!--android:textAlignment="center"-->
                    <!--android:textColor="@color/Text_for_screens"-->
                    <!--android:textSize="@dimen/_14dp" />-->



                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittextborder"
                    android:ems="10"
                    android:id="@+id/emailIdView"
                    android:hint="email id"
                    android:textColorHint="@color/text_color_hint"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/_14dp" />

                <EditText
                    android:id="@+id/passwordView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/edittextborder"
                    android:ems="10"
                    android:textColorHint="@color/text_color_hint"
                    android:hint="............."
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/Text_for_screens"
                    android:textSize="@dimen/_14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_18dp"
                    android:background="@null"
                    android:gravity="center"
                    android:alpha="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/problemSiging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10dp"
                        android:text="Problem Signing In?"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#297CB3"
                        android:textSize="@dimen/_14dp" />

                    <View
                        android:layout_width="@dimen/_2dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:background="@color/Text_for_screens" />

                    <TextView
                        android:id="@+id/singnUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:text="Sign Up"
                        android:textStyle="bold"
                        android:textColor="#297CB3"
                        android:textSize="@dimen/_14dp" />


                </LinearLayout>

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_22dp"
                    android:background="@drawable/login_border"
                    android:minWidth="@dimen/_220dp"
                    android:text="@string/login"
                    android:elevation="3dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16dp"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="or"
                    android:id="@+id/or"
                    android:textColor="#5C5C5C"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:alpha="1"
                    android:layout_marginTop="@dimen/_10dp"
                    android:minHeight="@dimen/_50dp"
                    android:orientation="horizontal">




                    <ImageButton
                        android:id="@+id/facebookButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center"
                        android:alpha="1"
                        android:elevation="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittextborder"
                        android:gravity="center"
                        android:layout_marginBottom="7dp"
                        android:minWidth="@dimen/_150dp"
                        android:scaleType="fitXY"
                        android:foregroundGravity="center"
                        android:paddingLeft="30dp"
                        android:paddingRight="@dimen/_29dp"
                        android:paddingBottom="12dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="@dimen/_10dp"
                        android:src="@drawable/facebook" />

                        <!--<ImageView-->
                            <!--android:layout_width="@dimen/_70dp"-->
                            <!--android:layout_height="69dp"-->
                            <!--android:src="@drawable/facebook" />-->



                    <ImageButton
                        android:id="@+id/googleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center"
                        android:alpha="1"
                        android:elevation="3dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="7dp"

                        android:background="@drawable/edittextborder"
                        android:gravity="center"
                        android:minWidth="@dimen/_150dp"
                        android:scaleType="fitXY"
                        android:paddingLeft="40dp"
                        android:layout_marginLeft="20dp"
                        android:paddingRight="@dimen/_40dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="@dimen/_10dp"
                        android:src="@drawable/google" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
