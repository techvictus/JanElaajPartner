<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_14dp"
    android:layout_marginRight="@dimen/_14dp"
    android:background="@android:color/transparent"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_10dp"
    app:cardElevation="@dimen/_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_5dp">

        <TextView
            android:id="@+id/textViewFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:text="31 Male"
            android:textSize="@dimen/_14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:text="SYMPOTMS: Feever Headache"
            android:textSize="@dimen/_14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:text="LAST VISIT: 13th April 2018"
            android:textSize="@dimen/_14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_8dp"
            android:paddingLeft="@dimen/_5dp">

            <CheckBox
                android:id="@+id/nextVisitCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NEXT VISIT" />


            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_border"
                android:gravity="center"
                android:text="Save"
                android:textAlignment="center"
                android:textColor="@android:color/white" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/nextVistLauout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/threeDays"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:layout_weight="1"
                android:text="3 Days"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/oneWeek"

                android:layout_weight="1"

                android:text="1 Week"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:textSize="@dimen/_16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/twoWeek"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2 Weeks"
                android:textAlignment="center"
                android:textSize="@dimen/_16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/oneMonths"
                android:layout_width="@dimen/_50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="@dimen/_50dp"
                android:layout_weight="1"
                android:text="1 Months"
                android:textAlignment="center"
                android:textSize="@dimen/_16dp"
                android:textStyle="bold" />





        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>